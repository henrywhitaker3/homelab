resource "digitalocean_ssh_key" "laptop" {
  name       = "Laptop"
  public_key = "ssh-rsa "
}

resource "digitalocean_vpc" "jump_vpc" {
  name     = "jump-net"
  region   = "lon1"
  ip_range = "10.100.0.0/24"
}

resource "digitalocean_droplet" "jump" {
  name     = "jump"
  size     = "s-1vcpu-1gb"
  image    = "ubuntu-22-04-x64"
  region   = "lon1"
  vpc_uuid = digitalocean_vpc.jump_vpc.id
  ssh_keys = [digitalocean_ssh_key.laptop.fingerprint]
}

resource "digitalocean_firewall" "web" {
  name = "only-22-80-and-443"

  droplet_ids = [digitalocean_droplet.jump.id]

  inbound_rule {
    protocol         = "tcp"
    port_range       = "22"
    source_addresses = ["0.0.0.0/0", "::/0"]
  }

  inbound_rule {
    protocol         = "tcp"
    port_range       = "80"
    source_addresses = ["0.0.0.0/0", "::/0"]
  }

  inbound_rule {
    protocol         = "tcp"
    port_range       = "443"
    source_addresses = ["0.0.0.0/0", "::/0"]
  }

  inbound_rule {
    protocol         = "icmp"
    source_addresses = ["0.0.0.0/0", "::/0"]
  }

  outbound_rule {
    protocol              = "tcp"
    port_range            = "53"
    destination_addresses = ["0.0.0.0/0", "::/0"]
  }

  outbound_rule {
    protocol              = "udp"
    port_range            = "53"
    destination_addresses = ["0.0.0.0/0", "::/0"]
  }

  outbound_rule {
    protocol              = "icmp"
    destination_addresses = ["0.0.0.0/0", "::/0"]
  }
}
