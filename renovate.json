{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabled": true,
    "gitAuthor": "renovate <henrywhitaker3+renovate@outlook.com>",
    "semanticCommits": "enabled",
    "labels": ["renovatebot"],
    "semanticCommitScope": "images",
    "dependencyDashboard": true,
    "dependencyDashboardTitle": "Renovate Dashboard",
    "suppressNotifications": ["prIgnoreNotification"],
    "prConcurrentLimit": 0,
    "rebaseWhen": "conflicted",
    "argocd": {
        "fileMatch": ["argo/cluster/.*\\.app\\.yaml"]
    },
    "packageRules": [
        {
            "matchManagers": ["kubernetes"],
            "matchDatasources": ["kubernetes-api"],
            "enabled": false
        },
        {
            "matchDatasources": ["docker"],
            "matchUpdateTypes": ["major"],
            "enabled": true
        },
        {
            "matchDatasources": ["docker"],
            "addLabels": ["docker/image"]
        },
        {
            "matchUpdateTypes": ["patch", "pin", "digest"],
            "addLabels": ["dep/patch"],
            "automerge": true
        },
        {
            "matchUpdateTypes": ["major"],
            "addLabels": ["dep/major"]
        },
        {
            "matchUpdateTypes": ["minor"],
            "addLabels": ["dep/minor"]
        },
        {
            "matchDatasources": "helm",
            "matchPackageNames": [
                "ghcr.io/immich-app/immich-server",
                "ghcr.io/immich-app/immich-machine-learning"
            ],
            "automerge": false
        },
        {
            "matchDatasources": "helm",
            "matchDepNames": ["longhorn"],
            "automerge": false
        },
        {
            "matchDatasources": "terraform",
            "automerge": false
        },
        {
            "versioning": "regex:^(?<major>\\d{1,3})\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
            "matchPackageNames": ["/linuxserver\\//"]
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "description": ["Process custom dependencies"],
            "fileMatch": ["ansible/.*/.*\\.yaml$", ".*.yaml$"],
            "matchStrings": [
                "(?m:# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( repository=(?<registryUrl>\\S+))?\\n\\s+image: ghcr.io\\/dragonflydb\\/dragonfly:(?<currentValue>\\S+?)$)",
                "(?m:# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( repository=(?<registryUrl>\\S+))?\\n\\s+- https:\\/\\/raw.githubusercontent\\.com\\/dragonflydb\\/dragonfly-operator\\/(?<currentValue>\\S+?))\\/manifests\\/crd.yaml$",
                "(?m:# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( repository=(?<registryUrl>\\S+))?\\n.+?: \"?(?<currentValue>\\S+?)\"?$)"
            ],
            "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}"
        }
    ]
}
